<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ECMKeepass.Telas.CadastrarKeep">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Margin="20,35,20,20">
                <Entry x:Name="GrupoNome" Placeholder="Grupo" IsEnabled="False" FontAttributes="Bold" />
                <Entry x:Name="Titulo" Placeholder="Título" />
                <Entry x:Name="Usuario" Placeholder="Usuário" />
                
                <StackLayout Orientation="Horizontal" >
                    <Entry x:Name="Senha" Placeholder="Senha" IsPassword="True" HorizontalOptions="FillAndExpand" />
                    <ImageButton Source="ic_view.png" Clicked="Visualizar" BackgroundColor="White" WidthRequest="30" />
                    <ImageButton Source="ic_newPassWord.jpg" Clicked="GerarSenha" WidthRequest="30" />
                </StackLayout>
                <Entry x:Name="Url" Placeholder="Url" />
                <Label Text="Comentário" />
                <Editor x:Name="Comentario" HeightRequest="200" />


                <Button Text="Salvar" Clicked="SalvarAction" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>